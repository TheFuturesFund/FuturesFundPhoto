<div class="row">
  <div class="page-header">
    <h1>Classrooms</h1>
  </div>
</div>
<div class="row">
  <table class="table">
    <tr>
      <th>Name</th>
      <th>Classroom</th>
    </tr>
    <% @classrooms.each do |classroom| %>
      <tr>
        <td><%= classroom.name %></td>
        <td><%= link_to "View", classroom_path(classroom) %></td>
      <tr>
    <% end %>
  </table>
</div>
<% if policy(:classroom).create? %>
  <div class="row">
    <%= link_to "New Classroom", new_classroom_path, class: "btn btn-primary" %>
  </div>
<% end %>
