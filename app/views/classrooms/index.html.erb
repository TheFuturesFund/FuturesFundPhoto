<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Classrooms</h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <table class="table">
      <tr>
        <th>Name</th>
        <th>Classroom</th>
      </tr>
      <% @classrooms.each do |classroom| %>
        <tr>
          <td><%= classroom.name %></td>
          <td><%= link_to "View", classroom_path(classroom) %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
<% if policy(:classroom).new? %>
  <div class="row">
    <div class="col-lg-12">
      <%= link_to "New Classroom", new_classroom_path, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
