<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Directors</h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <table class="table">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Profile</th>
      </tr>
      <% @directors.each do |director| %>
        <tr>
          <td><%= director.first_name %></td>
          <td><%= director.last_name %></td>
          <td><%= link_to director.user.email, "mailto:#{director.user.email}" %></td>
          <td><%= link_to "View", director_path(director) %></td>
        </tr>
      <% end %>
    </table>
  </div
</div>
<% if policy(:director).new? %>
  <div class="row">
    <div class="col-lg-12">
      <%= link_to "New Director", new_director_path, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
