<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Edit <%= @director.full_name %></h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <% if @director.errors.any? %>
      <div class="alert alert-danger">
        <p><%= pluralize(@director.errors.count, "error") %> prohibited this director from being saved:</p>
        <ul>
        <% @director.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <%= form_for(@director) do |f| %>
      <div class="form-group">
        <%= f.label :first_name %><br>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :last_name %><br>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
      <%= f.submit "Save", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<hr />
<div class="row">
  <div class="col-lg-12">
    <p><%= link_to "Edit email address or password", edit_user_path(@director.user) %></p>
  </div>
</div>
