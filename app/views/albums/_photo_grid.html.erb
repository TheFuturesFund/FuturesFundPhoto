<% @photos.each_slice(4) do |photo_slice| %>
  <div class="row">
    <% photo_slice.each do |photo| %>
      <div class="col-md-3">
        <h5><%= photo.name %></h5>
        <div class="image-container">
          <a href="#" data-toggle="modal" data-target="#<%= photo_modal_id(photo) %>">
            <%= image_tag(attachment_url(photo, :image, fallback: "default_photo_image.png"), width: "100%") %>
          </a>
        </div>
      </div>
    <% end %>
  </div>
  <% if photo_slice.last != @photos.last %>
    <hr/>
  <% end %>
<% end %>
