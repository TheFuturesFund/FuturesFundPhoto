<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Add photos to "<%= @album.name %>"</h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <% if @album.errors.any? %>
      <div class="alert alert-danger">
        <p><%= pluralize(@album.errors.count, "error") %> prohibited this album from being saved:</p>>
        <ul>
        <% @album.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
<%= form_for(@album, url: add_photos_album_path(@album), method: :put, html: { id: "add-photos-form" }) do |f| %>
  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <%= f.label :photos %>
        <%= f.attachment_field :photos_images, multiple: true, direct: true %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div id="upload-progress">
        
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <%= f.submit "Add Photos", class: "btn btn-primary", id: "add-photos-submit-button" %>
    </div>
  </div>
<% end %>
