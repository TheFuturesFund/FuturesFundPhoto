<div class="row">
  <div class="page-header">
    <h1>Editing <%= @photo.name %></h1>
  </div>
</div>
<div class="row">
  <div class="col-sm-6">
    <div class="image-container">
      <%= image_tag(attachment_url(@photo, :image, fallback: "default_photo_image.png"), width: "100%") %>
    </div>
  </div>
</div>
<hr>
<div class="row">
  <%= form_for(@photo) do |f| %>
    <% if @photo.errors.any? %>
      <div class="alert alert-danger">
        <p><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</p>
        <ul>
        <% @photo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :category %><br>
      <%= 
        f.select :category,
        [["Outtake", "outtake_category"], ["Select", "select_category"], ["Top Select", "top_select_category"]],
        {},
        { class: "form-control" }
      %>
    </div>
    <%= f.submit "Update", class: "btn btn-primary" %>
  <% end %>
</div>
