<div class="row">
  <div class="page-header">
    <h1>Teachers</h1>
  </div>
</div>
<div class="row">
  <table class="table">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Profile</th>
    </tr>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.first_name %></td>
        <td><%= teacher.last_name %></td>
        <td><%= link_to teacher.user.email, "mailto:#{teacher.user.email}" %></td>
        <td><%= link_to "View", teacher_path(teacher) %></td>
      <tr>
    <% end %>
  </table>
</div>
<% if policy(:teacher).create? %>
  <div class="row">
    <%= link_to "New Teacher", new_teacher_path, class: "btn btn-primary" %>
  </div>
<% end %>
