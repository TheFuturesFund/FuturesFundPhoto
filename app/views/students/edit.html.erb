<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Edit <%= @student.full_name %></h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <% if @student.errors.any? %>
      <div class="alert alert-danger">
        <p><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</p>
        <ul>
        <% @student.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <%= form_for(@student) do |f| %>
      <div class="form-group">
        <%= f.label :first_name %><br>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :last_name %><br>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
      <% if !current_user.student? %>
        <div class="form-group">
          <%= f.label :classroom_id, "Class" %><br>
          <%= f.select :classroom_id, classroom_select_options, {}, { class: "form-control" } %>
        </div>
      <% end %>
      <%= f.submit "Save", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<hr />
<div class="row">
  <div class="col-lg-12">
    <p><%= link_to "Edit email address or password", edit_user_path(@student.user) %></p>
  </div>
</div>
