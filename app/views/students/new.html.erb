<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Invite New Student to <%= @classroom.name %></h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <% if @user.errors.any? || @student.errors.any? %>
      <div class="alert alert-danger">
        <p><%= pluralize(@user.errors.count + @student.errors.count, "error") %> prohibited this student from being saved:</p>
        <ul>
        <% @student.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <%= form_for([@classroom, @student]) do |f| %>
      <div class="form-group">
        <%= f.label :first_name %><br>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :last_name %><br>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :email %><br>
        <%= email_field :user, :email, class: "form-control" %>
      </div>
      <%= f.submit "Invite", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
